<div class="ui attached message">
  <div class="header">
    Editando "<%= @libro.titulo %>"
  </div>
  <p>Llena todos los campos para actualizar la reseña</p>
</div>

<%= form_for @libro, :html => {:class => "ui form attached fluid segment"} do |f| %>

  <div class="field">
    <%= f.label :titulo %>
    <%= f.text_field :titulo %>
  </div>

  <div class="field">
    <%= f.label :autor %>
    <%= f.text_field :autor %>
  </div>

  <div class="field">
    <%= f.label :descripción %>
    <%= f.text_area :descripcion %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar reseña", class: "ui blue submit button" %>
  </div>

<% end %>
