<div class="ui container">
  <div class="ui attached message">
    <div class="header">
      Unete!
    </div>
    <p>Llena los siguientes campos para registrarte</p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "ui form attached fluid segment"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %>
      <div class="ui left icon input">
        <%= f.email_field :email %>
        <i class="globe icon"></i>
      </div>
    </div>

    <div class="field">
      <%= f.label :contraseña %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> Caracteres como mínimo)</em>
      <% end %>
      <div class="ui left icon input">
        <%= f.password_field :password, autocomplete: "off" %>
        <i class="lock icon"></i>
      </div>
    </div>

    <div class="field">
      <%= f.label :confirme_la_contraseña %>
      <div class="ui left icon input">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <i class="lock icon"></i>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Registrarse", class: "ui blue submit button" %>
    </div>

  <% end %>

  <div class="ui bottom attached warning message">
    <i class="icon help"></i>
    ¿Ya estas registrado? <%= link_to "Inicia sesión", new_user_session_path %>.
  </div>

</div>
